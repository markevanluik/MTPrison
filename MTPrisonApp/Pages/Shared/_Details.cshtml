
@{
    ViewData["SubTitle"] = Model?.GetType()?.Name?.Replace("sPage", string.Empty) ?? "Unspecified";
    ViewData["Title"] = "Details";
    Layout = "_Layout";
    var itemId = Model?.ItemId?? string.Empty;
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@ViewData["SubTitle"]</h4>
    <hr />
    @RenderBody()
    <div>
    <a asp-page="./Edit" asp-page-handler="Edit" class="btn btn-success" asp-route-id="@itemId">Edit</a>&nbsp;
    <a asp-page="./Index" asp-page-handler="Index">Back to List</a>
    </div>
</div>
